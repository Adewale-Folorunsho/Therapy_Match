<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Therapy Match"
        android:fontFamily="cursive"
        android:textColor="#FFD400"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/etSignUpUsername"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#000000"
        android:hint="Username"
        android:textColor="#000000"
        android:textColorHint="#CCC7C7"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <EditText
        android:id="@+id/etSignUpPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etSignUpUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:backgroundTint="#000000"
        android:textColor="#000000"
        android:textColorHint="#CCC7C7"
        android:hint="Password"
        android:inputType="textPassword"
        app:helperText="Password"
        app:helperTextEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSignUpPassword"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="106dp"
        android:textAllCaps="false"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/tvSignUpRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="Already have an account?"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnLogin"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-10dp"
        android:layout_marginBottom="5.5dp"
        android:layout_toEndOf="@+id/tvSignUpRegister"
        android:capitalize="none"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#FFD500" />


</RelativeLayout>